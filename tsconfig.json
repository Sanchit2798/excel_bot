{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowUnusedLabels": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "node",
    // "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2020",// "es5",
    "lib": [
      //"es7",
      //"dom"
      "ES2020", "DOM"
    ],
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./components/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "ts-node": { 
    "compilerOptions": {
      "module": "commonjs"
    },
    "files": true 
  },
  "include": [ "**/*.ts", "**/*.tsx","**/*.css"],
}